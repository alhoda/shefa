<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notifyContentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:scaleType="fitXY"
    tools:context="com.example.hassan.HealingSprit.NotificationContent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_message_bg"
        android:textColor="#282828"
        android:textSize="18dp"
        android:id="@+id/notifyContent"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_marginBottom="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        ></TextView>
    <!--android:layout_marginTop="124dp"-->


    <!--android:background="@drawable/text_container"-->
</RelativeLayout>
